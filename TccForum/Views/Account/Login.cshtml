@model TccForum.Models.ViewModels.AcessoViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row-1">
    <div class="card text-center border-0 m-auto mb-2 mt-4" style="width: 30rem">
        <h3>Acessar o Fórum</h3>
    </div>
    <div class="card m-auto mb-3" style="width: 30rem">
        <div class="card-body px-gutter-4 py-gutter-3">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-gutter-3">
                    <label asp-for="NomeDoUsuarioOuEmail" class="control-label fw-500 mb-gutter-1"></label>
                    <input asp-for="NomeDoUsuarioOuEmail" class="form-control" />
                    <span asp-validation-for="NomeDoUsuarioOuEmail" class="text-danger"></span>
                </div>
                <div class="form-group mb-gutter-3">
                    <label asp-for="Senha" class="control-label fw-500 mb-gutter-1"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-primary fw-500 w-100" />
                </div>
            </form>
        </div>
    </div>
    <div class="card m-auto mb-3" style="width: 30rem">
        <div class="card-body text-center px-gutter-4 py-gutter-3">
            <h6>Ainda não tem conta?? <a class="text-decoration-none" asp-action="Cadastrar">Cadastre-se agora</a></h6>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
