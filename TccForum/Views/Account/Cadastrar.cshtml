@model TccForum.Models.ViewModels.UsuarioCadastroViewModel
@{
    ViewData["Title"] = "Cadastrar";
}

<div class="row-1">
    <div class="card text-center border-0 m-auto mb-2 mt-4" style="width: 30rem">
        <h3>Criar conta</h3>
    </div>
    <div class="card m-auto mb-3" style="width: 30rem">
        <div class="card-body px-gutter-4 py-gutter-3">
            <form asp-action="Cadastrar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (ViewBag.CadastradoComSucesso != null)
                {
                    <div class="form-group" style="color: green;">@ViewBag.CadastradoComSucesso</div>
                }
                <div class="form-group mb-gutter-3">
                    <label asp-for="PrimeiroNome" class="control-label fw-500 mb-gutter-1"></label>
                    <input asp-for="PrimeiroNome" class="form-control" />
                    <span asp-validation-for="PrimeiroNome" class="text-danger"></span>
                </div>
                <div class="form-group mb-gutter-3">
                    <label asp-for="UltimoNome" class="control-label fw-500 mb-gutter-1"></label>
                    <input asp-for="UltimoNome" class="form-control" />
                    <span asp-validation-for="UltimoNome" class="text-danger"></span>
                </div>
                <div class="form-group mb-gutter-3">
                    <label asp-for="Email" class="control-label fw-500 mb-gutter-1"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-gutter-3">
                    <label asp-for="NomeDoUsuario" class="control-label fw-500 mb-gutter-1"></label>
                    <input asp-for="NomeDoUsuario" class="form-control" />
                    <span asp-validation-for="NomeDoUsuario" class="text-danger"></span>
                </div>
                <div class="form-group mb-gutter-3">
                    <label asp-for="Senha" class="control-label fw-500 mb-gutter-1"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group mb-gutter-3">
                    <label asp-for="ConfirmarSenha" class="control-label fw-500 mb-gutter-1"></label>
                    <input asp-for="ConfirmarSenha" class="form-control" />
                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                </div>
                <div class="form-group mb-gutter-3">
                    <label asp-for="TipoDeUsuario" class="control-label fw-500 mb-gutter-1"></label>
                    <select class="form-control" asp-for="TipoDeUsuario">
                        <option selected disabled>Selecione...</option>
                        <option value="UsuarioPadrao">Usuario padrão</option>
                        <option value="UsuarioPremium">Usuario premium</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary fw-500 w-100" />
                </div>
            </form>
        </div>
    </div>
    <div class="card m-auto mb-3" style="width: 30rem">
        <div class="card-body text-center px-gutter-4 py-gutter-3">
            <h6>Já tem uma conta?? <a class="text-decoration-none" asp-action="Login">Acesse aqui</a></h6>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
